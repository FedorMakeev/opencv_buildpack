#!/bin/bash
set -euo pipefail

BUILD_DIR=$1
CACHE_DIR=$2
DEPS_DIR=$3
DEPS_IDX=$4
echo "Supplying opencv"
BP_DIR=$(cd $(dirname ${0:-}); cd ..; pwd)

mkdir -p $BUILD_DIR/lib
cp -v $BP_DIR/lib/* $DEPS_DIR/$DEPS_IDX
cp -v $BP_DIR/apt.yml $BUILD_DIR/

LD_LIBRARY_PATH=$DEPS_DIR/$DEPS_IDX
export LD_LIBRARY_PATH
