#!/bin/bash
set -euo pipefail

BUILD_DIR=$1
CACHE_DIR=$2
DEPS_DIR=$3
DEPS_IDX=$4
echo "Supplying opencv"
BP_DIR=$(cd $(dirname ${0:-}); cd ..; pwd)
LIB_DIR=$DEPS_DIR/$DEPS_IDX/lib

mkdir -p $BUILD_DIR/lib
mkdir -p $LIB_DIR
cp -v $BP_DIR/lib/* $LIB_DIR
cp -v $BP_DIR/apt.yml $BUILD_DIR/

env LD_LIBRARY_PATH=$LIB_DIR:$LD_LIBRARY_PATH
